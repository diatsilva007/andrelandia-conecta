generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comercio {
  id        Int        @id @default(autoincrement())
  nome      String
  categoria String?    // Ex: "Restaurante", "Mercado", "Serviços", etc.
  descricao String?
  endereco  String?
  telefone  String?
  imagem    String?    // Caminho relativo da imagem
  latitude  Float?
  longitude Float?
  usuario   Usuario    @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  produtos  Produto[]
  avaliacoes Avaliacao[]
  pedidos   Pedido[]
  criadoEm  DateTime   @default(now())
}
model Avaliacao {
  id         Int      @id @default(autoincrement())
  nota       Int
  comentario String?
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  comercio   Comercio @relation(fields: [comercioId], references: [id], onDelete: Cascade)
  comercioId Int
  criadoEm   DateTime @default(now())
}

model Produto {
  id         Int      @id @default(autoincrement())
  nome       String
  preco      Float
  descricao  String?
  imagem     String?  // Caminho relativo da imagem
  comercio   Comercio @relation(fields: [comercioId], references: [id], onDelete: Cascade)
  comercioId Int
  criadoEm   DateTime @default(now())
  itensPedido ItemPedido[]
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  tipo      String     @default("cliente") // "cliente" ou "comerciante"
  imagem    String?    // Caminho relativo da imagem de perfil
  descricao String?    // Descrição/sobre do usuário
  avaliacoes Avaliacao[]
  comercios Comercio[]
  pedidos   Pedido[]
  criadoEm  DateTime   @default(now())
  resetToken        String?   // Token para redefinição de senha
  resetTokenExpires DateTime? // Expiração do token
}

// Modelo de Pedido (venda)
model Pedido {
  id         Int         @id @default(autoincrement())
  usuario    Usuario     @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  comercio   Comercio    @relation(fields: [comercioId], references: [id])
  comercioId Int
  itens      ItemPedido[]
  criadoEm   DateTime    @default(now())
}

// Itens do pedido (produtos vendidos)
model ItemPedido {
  id        Int      @id @default(autoincrement())
  pedido    Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  pedidoId  Int
  produto   Produto  @relation(fields: [produtoId], references: [id])
  produtoId Int
  quantidade Int     @default(1)
  precoUnitario Float
}
