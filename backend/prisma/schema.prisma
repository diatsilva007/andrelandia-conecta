generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comercio {
  id        Int        @id @default(autoincrement())
  nome      String
  categoria String?    // Ex: "Restaurante", "Mercado", "Serviços", etc.
  descricao String?
  endereco  String?
  telefone  String?
  produtos  Produto[]
  avaliacoes Avaliacao[]
  criadoEm  DateTime   @default(now())
}
model Avaliacao {
  id         Int      @id @default(autoincrement())
  nota       Int
  comentario String?
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  comercio   Comercio @relation(fields: [comercioId], references: [id])
  comercioId Int
  criadoEm   DateTime @default(now())
}

model Produto {
  id         Int      @id @default(autoincrement())
  nome       String
  preco      Float
  descricao  String?
  comercio   Comercio @relation(fields: [comercioId], references: [id])
  comercioId Int
  criadoEm   DateTime @default(now())
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  tipo      String     @default("cliente") // "cliente" ou "comerciante"
  avaliacoes Avaliacao[]
  criadoEm  DateTime   @default(now())
  resetToken        String?   // Token para redefinição de senha
  resetTokenExpires DateTime? // Expiração do token
}
